<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.student.information.detailinformation.DetailInformationActivity"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/baby_blue">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="36dp"
            android:layout_height="46dp"
            android:background="@drawable/baseline_arrow_back_ios_new_24"
            android:contentDescription="@string/button_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="@string/recap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="39dp"
                android:layout_marginBottom="21dp"
                app:strokeColor="@color/black"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:gravity="center">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_image_profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="50dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="32dp">
                        <ImageView
                            android:id="@+id/iv_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/profile"
                            android:src="@drawable/profile_image"
                            tools:src="@tools:sample/avatars"/>
                    </com.google.android.material.card.MaterialCardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            tools:text="@tools:sample/first_names"/>
                        <TextView
                            android:id="@+id/tv_student_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            tools:text="@tools:sample/us_zipcodes"
                            android:layout_marginBottom="5dp"/>
                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            tools:text="@tools:sample/date/ddmmyy"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="25dp"
                    android:paddingHorizontal="15dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:contentDescription="@string/absen"
                        android:src="@drawable/books"
                        android:layout_marginEnd="12dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="@string/absen"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/lorem_ipsum"
                            android:layout_marginBottom="17dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/cp_loading_absent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:indeterminate="true"
                                android:layout_gravity="center"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:id="@+id/tv_percentage_absent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/completed_0"/>
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/pb_absent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleY="2"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="0"
                            android:progressTint="@color/dark_blue"
                            android:progressBackgroundTint="@color/white"
                            android:progressBackgroundTintMode="add"
                            android:min="0"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_orange"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="25dp"
                    android:paddingHorizontal="15dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:contentDescription="@string/mood_recap"
                        android:src="@drawable/smile"
                        android:layout_marginEnd="12dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="@string/mood_recap"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/lorem_ipsum"
                            android:layout_marginBottom="17dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/cp_loading_mood"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:indeterminate="true"
                                android:layout_gravity="center"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:id="@+id/tv_percentage_mood"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/completed_0"/>
                        </LinearLayout>
                        <ProgressBar
                            android:id="@+id/pb_mood"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleY="2"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="0"
                            android:progressTint="@color/dark_blue"
                            android:progressBackgroundTint="@color/white"
                            android:progressBackgroundTintMode="add"
                            android:min="0"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_half_blue"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="25dp"
                    android:paddingHorizontal="15dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:contentDescription="@string/atribut_recap"
                        android:src="@drawable/shirt"
                        android:layout_marginEnd="12dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="@string/atribut_recap"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/lorem_ipsum"
                            android:layout_marginBottom="17dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/cp_loading_atribute"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:indeterminate="true"
                                android:layout_gravity="center"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:id="@+id/tv_percentage_atribute"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/completed_0"/>
                        </LinearLayout>
                        <ProgressBar
                            android:id="@+id/pb_atribute"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleY="2"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="0"
                            android:progressTint="@color/dark_blue"
                            android:progressBackgroundTint="@color/white"
                            android:progressBackgroundTintMode="add"
                            android:min="0"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>